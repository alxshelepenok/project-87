---
import { InvisibleLogo } from "@/components/atoms/InvisibleLogo";
import Layout from "@/components/atoms/Layout/Layout.astro";

const content = {
  title: "Alexander Shelepenok - Project 87",
  description: "Alexander Shelepenok - Project 87",
  canonical: "https://project-87.alxshelepenok.com",
  author: "Alexander Shelepenok",
};
---

<html lang="en">
  <head>
    <title>Alexander Shelepenok - Project 87</title>
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="English" />
    <meta name="author" content={content.author} />
    <meta name="description" content={content.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href={content.canonical} />
    <meta name="generator" content={Astro.generator} />
    <style>
      html,
      body {
        margin: 0;
      }
      body {
        height: 100vh;
        width: 100vw;
      }
    </style>
  </head>
  <body>
    <Layout>
      <InvisibleLogo client:visible />
    </Layout>
  </body>
</html>
