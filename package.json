{
  "name": "project-87",
  "version": "0.0.1",
  "description": "This is a simple demonstration of a web application that uses the Astro framework with GLSL shaders",
  "repository": {
    "type": "git",
    "url": "https://github.com/alxshelepenok/project-87.git"
  },
  "license": "MIT",
  "author": "Alexander Shelepenok <alxshelepenok@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "npm run clean && astro check && astro build",
    "clean": "rimraf target",
    "format": "npm run format:ts && npm run format:scss",
    "format:scss": "stylelint \"src/**/*.scss\" --fix",
    "format:ts": "eslint \"src\" --ext .tsx,.ts,.astro,.mjs --fix && prettier --write .",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:commit": "commitlint",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "lint:staged": "lint-staged",
    "lint:ts": "eslint \"src\" --ext .tsx,.ts,.astro,.mjs && prettier --check .",
    "prepare": "husky install",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{tsx?|astro|mjs}": [
      "npm run format:ts"
    ],
    "*.{(sc|sa|c)ss}": [
      "npm run format:scss"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "@astrojs/preact": "^3.0.2",
    "@preact/signals": "^1.2.3",
    "astro": "^3.6.5",
    "glsl-noise": "^0.0.0",
    "glsl-rotate": "^2.0.0",
    "preact": "^10.19.7",
    "three": "0.159.0"
  },
  "devDependencies": {
    "@alxshelepenok/eslint-config": "^1.0.447",
    "@astrojs/ts-plugin": "^1.3.1",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@types/node": "^20.12.8",
    "@types/three": "^0.159.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "autoprefixer": "^10.4.19",
    "browserslist": "^4.23.0",
    "conventional-changelog-conventionalcommits": "6.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^0.33.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "8.0.3",
    "lint-staged": "^13.3.0",
    "postcss": "^8.4.38",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-packagejson": "2.4.14",
    "rimraf": "5.0.5",
    "sass": "^1.69.7",
    "semantic-release": "21.1.2",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^4.7.0",
    "typescript": "<=5.3.0",
    "vite-plugin-glsl": "^1.2.1"
  }
}
